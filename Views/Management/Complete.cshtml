@model CompleteViewModel

@{
    ViewData["Title"] = "Complete Page";
}

<div class="card text-center turnover">
  <div class="card-header">
    营收概况
  </div>
  <div class="card-body">
    <h5 class="card-title">当前时间：@Model.NowData</h5>
    
    @foreach (KeyValuePair<string, double> keyValuePair in Model.moneyMap)
    {
            <p class="card-text"> 
                @keyValuePair.Key
                月总收入： 
                <span class="badge badge-pill badge-info">@keyValuePair.Value ￥</span>
            </p>
    }
    
  </div>
  <div class="card-footer text-muted">
    总收入：<span class="badge badge-warning">@Model.TotalRevenue</span>
  </div>
</div>

<div>
    <table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">发起时间</th>
            <th scope="col">完成时间</th>
            <th scope="col">座位</th>
            <th scope="col">金额</th>
            <th scope="col">内容</th>
            <th scope="col">处理</th>
        </tr>
    </thead>
    <tbody>

      @foreach (var item in Model.CompleteList)
        {
            <tr>
                <th scope="row">@item.BeginTime</th>
                <th scope="row">@item.EndTime</th>
                <td>@item.Seat</td>
                <td class="fontColorBright">@item.Money</td>
                <td>@item.Detail</td>
        
                <td>
                <button data-itemid="@item.Id" type="button" class="btn btn-outline-success btn-sm" disabled>已处理</button>
                </td>
        </tr>
        }

    </tbody>
    </table>
</div>
